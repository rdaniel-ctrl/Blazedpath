{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "gameId",
            "variableName": "gameId"
          },
          {
            "command": "Set",
            "expression": "QuizzesMicroservice.GetGameState(gameId)",
            "variableName": "gameState"
          },
          {
            "command": "SetValue",
            "expression": "{message:getFinalMessageByScore(gameState.score,gameState.totalRounds)}",
            "widgetName": "htmlrendererFinalMessage"
          },
          {
            "command": "SetValue",
            "expression": "{score:gameState.score, totalRounds: gameState.totalRounds}",
            "widgetName": "htmlrendererScore"
          },
          {
            "command": "WriteModel",
            "expression": "gameState.playerName",
            "modelVariableName": "playerName"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "gameId",
            "type": "integer"
          },
          {
            "name": "gameState",
            "type": "QuizzesMicroservice.GameState"
          }
        ]
      },
      "name": "main_init"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "playerName",
            "variableName": "playerName"
          },
          {
            "command": "Navigate",
            "expressionStartModel": "{playerName:playerName}",
            "uiComponentName": "CmpStartGame"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "playerName",
            "type": "string"
          }
        ]
      },
      "name": "buttonPlayAgain_click"
    },
    {
      "algorithm": {
        "parameters": [
          {
            "name": "userScore",
            "type": "integer"
          },
          {
            "name": "maxScore",
            "type": "integer"
          }
        ],
        "statements": [
          {
            "command": "Set",
            "expression": "(userScore / maxScore) *100",
            "variableName": "score"
          },
          {
            "children": [
              {
                "command": "Return",
                "expression": "\"Perfect! Congratulacion!\""
              }
            ],
            "command": "If",
            "expression": "score >= 100"
          },
          {
            "children": [
              {
                "command": "Return",
                "expression": "\"Well done!\""
              }
            ],
            "command": "ElseIf",
            "expression": "score>= 75"
          },
          {
            "children": [
              {
                "command": "Return",
                "expression": "\"Not bad!\""
              }
            ],
            "command": "ElseIf",
            "expression": "score >= 50"
          },
          {
            "children": [
              {
                "command": "Return",
                "expression": "\"Keep trying!\""
              }
            ],
            "command": "ElseIf",
            "expression": "score >= 25"
          },
          {
            "children": [
              {
                "command": "Return",
                "expression": "\"Concentrate and try again!\""
              }
            ],
            "command": "Else"
          }
        ],
        "typeReturn": "string",
        "variables": [
          {
            "name": "score",
            "type": "decimal"
          }
        ]
      },
      "name": "getFinalMessageByScore"
    }
  ],
  "model": [
    {
      "name": "gameId",
      "required": true,
      "type": "integer"
    },
    {
      "name": "playerName",
      "required": false,
      "type": "string"
    }
  ],
  "root": {
    "children": [
      {
        "cssClass": "blz-padding-top-large blz-padding-right-large blz-padding-left-large",
        "htmlTemplate": "<center>\n<h2>\n  <b>{{message}}</b>\n  </h2>\n</center>",
        "name": "htmlrendererFinalMessage",
        "widget": "HtmlRenderer"
      },
      {
        "cssClass": "blz-padding-top-large",
        "htmlTemplate": "<center>\n  <h3>\n    Your score was:\n  </h3>\n  <h1>\n    {{score}} /{{totalRounds}}\n  </h1>\n</center>",
        "name": "htmlrendererScore",
        "widget": "HtmlRenderer"
      },
      {
        "align": "center",
        "attribute": {
          "color": "success",
          "name": "buttonPlayAgain",
          "size": "large",
          "text": "PLAY AGAIN"
        },
        "color": "success",
        "cssClass": "blz-padding-top-large",
        "name": "buttonPlayAgain",
        "size": "large",
        "text": "PLAY AGAIN",
        "widget": "Button"
      }
    ],
    "cssClass": "blz-area-default",
    "layout": "container"
  },
  "routing": {
    "path": "/end.game"
  },
  "unused": []
}